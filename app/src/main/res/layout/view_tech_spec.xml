<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_spec_name"
        android:layout_width="@dimen/spec_name_width"
        android:layout_height="wrap_content"
        android:text="@string/intelligence"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView android:id="@+id/tv_score"
        android:layout_width="@dimen/spec_score_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/secondary_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <SeekBar
        android:id="@+id/sb_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="10"
        android:layout_marginStart="@dimen/secondary_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_spec_name"
        app:layout_constraintEnd_toStartOf="@id/tv_score"
        />



</androidx.constraintlayout.widget.ConstraintLayout>